<mujoco model="table_with_bowling_simulation">
  <compiler angle="radian" />
  <option timestep="0.001" integrator="RK4">
    <flag energy="enable" />
  </option>
  <size memory="1G" nkey="1" />
  <visual>
    <global azimuth="225" elevation="-30" />
  </visual>
  <asset>
    <texture type="skybox" colorspace="auto" builtin="gradient" rgb1="1 1 1" rgb2="0.6 0.8 1" width="256" height="1536" />
    <texture type="2d" colorspace="auto" name="grid" builtin="checker" rgb1="0.1 0.2 0.3" rgb2="0.2 0.3 0.4" width="512" height="512" />
    <material name="grid" texture="grid" texuniform="true" reflectance="0.2" />
  </asset>
  <worldbody>
    <geom name="floor" size="0 0 0.05" type="plane" material="grid" />
    <light pos="0 0 5" dir="0 0 -1" diffuse="0.5 0.5 0.5" />
    <body name="cube" pos="1.5 0 1">
      <joint type="free" />
      <geom size="0.1 0.1 0.1" type="box" mass="10" rgba="0 0 0.9 1" />
    </body>
  </worldbody>
  <extension>
    <plugin plugin="mujoco.multiverse_connector">
      <instance name="mujoco_client">
        <config key="transport" value="zmq" />
        <config key="host" value="tcp://127.0.0.1" />
        <config key="server_port" value="9000" />
        <config key="client_port" value="7501" />
        <config key="world_name" value="world" />
        <config key="simulation_name" value="world_simulation" />
        <config key="send" value="{}" />
        <config key="receive" value="{'cube': ['relative_velocity', 'position', 'quaternion']}" />
      </instance>
    </plugin>
  </extension>
</mujoco>